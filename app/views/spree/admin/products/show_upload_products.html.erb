<header class="content-header page-header">
  <h1>Upload products </h1>
  <h5>
    From this page, an admin can upload a CSV file to create new products.
  </h5>
</header>
<section>
  <header class="content-header">
    <h3>Upload a CSV file</h3>
  </header>
  <div class="well">
    <%= form_tag post_admin_upload_products_path, method: :post, multipart: true do %>
      <div class="form-group">
        <%= label_tag :file %>
        <%= file_field_tag :file, accept: 'text/csv' %>
      </div>
      <%= submit_tag "Upload", class: "btn btn-primary" %>
    <% end %>
  </div>
</section>
